<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include('partials/head.ejs'); %>
	</head>

	<body>
		<!--  ------------------ PROMO ------------------ -->
		<div class="promo">
			<span>
				<a href="#">
					<i class="fas fa-envelope"></i> contactvitahealthc@gmail.com
				</a></span
			>
			<span>Get 30% OFF This Christmas Holidays</span>
			<span>
				<ul class="media_social">
					<li>
						<a href="#"><i class="fab fa-facebook-square"></i></a>
						<a href="#"><i class="fab fa-instagram"></i></a>
					</li>
				</ul>
			</span>
		</div>

		<!-- ------------------ HEADER ------------------------ -->
		<div class="header">
			<%- include('partials/header.ejs', {account: user.name}); %>
		</div>
		<!-- ------------------ End Header ------------------------ -->

		<!-- ----------------- SINGLE PRODUCT DETAILS ------------- -->

		<div class="content-product">
			<div class="content-wrapper">
				<!-- Elemento 1 -->
				<div class="view-product">
					<div class="col-2">
						<img src="./img/product7.jpg" width="4px" id="ProductImg" />

						<div class="small-img-row">
							<div class="small-img-col">
								<img src="./img/product8.jpg" class="small-img" />
							</div>
							<div class="small-img-col">
								<img src="./img/product9.jpg" class="small-img" />
							</div>
							<div class="small-img-col">
								<img src="./img/product10.jpg" class="small-img" />
							</div>
						</div>
					</div>
				</div>

				<!-- Elemento 2 -->
				<div class="info-producto">
					<h2>AMMATERRE BUNDLE - Day Cream, Night Cream and Eye Serum</h2>
					<p class="product-price">$250</p>
					<label class="size-product">Size</label>
					<select>
						<option>Select Size</option>
						<option>.5m</option>
						<option>1mm</option>
					</select>
					<input type="number" value="1" />
					<a href="#" class="btn-product">Add to card</a>
					<h3>Description</h3>
					<p>
						540 titanium over stainless steel micro-needles. Available in either
						1.0mm for normal skin or .5mm for sensitive skin.
					</p>
				</div>
			</div>
		</div>

		<!--    Title -->
		<div class="small-container-product">
			<div class="row-product row-2">
				<h2>Related Products</h2>
			</div>
		</div>

		<!-- ----------------- Related products -----------------  -->
		<section class="section">
			<div class="title title-shop-skinscare"></div>
			<div class="product-center container">
				<% for(let i=0; i < products_related.length; i++) { %>
				<div class="product">
					<div class="img-cover">
						<img src="<%= products_related[i].image %>" />
					</div>
					<p><%= products_related[i].name %></p>
					<div class="rating">
						<% for(var j=0; j < products_related[i].assessment; j++) { %>
						<i class="bx bxs-star"></i>
						<% } %>
					</div>
					<div class="price">$<%= products_related[i].price %></div>
					<a href="/shop">aqui</a>
				</div>
				<% } %>
			</div>
		</section>

		<!-- ------------------------  Footer ------------------------  -->
		<div class="footer">
			<div class="container-footer">
				<div class="row-footer">
					<div class="footer-col-3">
						<h3>Vita Health Center</h3>
						<ul>
							<li class="li-footer"></li>
							<li>FAQ</li>
							<li>Blogs Post</li>
							<li>My Account</li>
							<li>Contact us</li>
							<li>Terms of Use — Privacy Policy</li>
						</ul>
					</div>
					<div class="footer-col-2">
						<img src="./img/1.png" />
					</div>
					<div class="footer-col-3">
						<h3>Vita Skincare</h3>
						<ul>
							<li class="li-footer"></li>
							<li>Blogs Post</li>
							<li>My Account</li>
							<li>instructions</li>
							<li>Return Policy</li>
							<li>Terms of Use — Privacy Policy</li>
						</ul>
					</div>
					<div class="footer-col-4">
						<h3>Follow us</h3>
						<ul>
							<li>Facebook</li>
							<li>Instagram</li>
							<li>Pinterest</li>
						</ul>
					</div>
				</div>
				<hr />
				<p class="copyright">Copyright 2021 - Vita Inc</p>
			</div>
		</div>
		<script>
			console.log('hola mundo desde js');
			var ProductImg = document.getElementById('ProductImg');

			var SmallImg = document.getElementsByClassName('small-img');

			SmallImg[0].onclick = function () {
				ProductImg.src = SmallImg[0].src;
				console.log(ProductImg);
			};

			SmallImg[1].onclick = function () {
				ProductImg.src = SmallImg[1].src;
			};

			SmallImg[2].onclick = function () {
				ProductImg.src = SmallImg[2].src;
			};
		</script>
		<%- include('partials/script.ejs'); %>
	</body>
</html>
