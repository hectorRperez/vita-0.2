<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include('partials/head.ejs'); %>
	</head>

	<body>
		<!--  ------------------ PROMO ------------------ -->
		<div class="promo">
			<span>
				<a href="#">
					<i class="fas fa-envelope"></i> contactvitahealthc@gmail.com
				</a></span
			>
			<span>Get 30% OFF This Christmas Holidays</span>
			<span>
				<ul class="media_social">
					<li>
						<a href="#"><i class="fab fa-facebook-square"></i></a>
						<a href="#"><i class="fab fa-instagram"></i></a>
					</li>
				</ul>
			</span>
		</div>

		<!-- ------------------ HEADER ------------------------ -->
		<div class="header">
			<%- include('partials/header.ejs', { account: user.name ?? "unknown", car }); %>
		</div>
		<!-- ------------------ End Header ------------------------ -->

		<!-- ----------------- SINGLE PRODUCT DETAILS ------------- -->
		<div class="container my-5 py-5">
			<h1>Shopping Cart</h1>
			<div class="row">
			  <% for (var i = 0; i < car.items.length; i++) { %>
				<div class="col-md-4">
				  <div class="card">
					<img src="<%= car.items[i].image %>" class="card-img-top">
					<div class="card-body">
						<%= car.item %>
					  <h5 class="card-title"><%= car.items[i].product.name %></h5>
					  <p class="card-text"><%= car.items[i].product.description %></p>
					  <p class="card-text">Quantity: <%= car.items[i].count %></p>
					  <p class="card-text">Price: <%= car.items[i].product.price %></p>
					</div>
				  
					<div class="card-footer">
						<a href="/shopping_cart/delete/<%= car.items[i].id %>" class="btn btn-danger btn-sm">delete</a>
					</div>
				  </div>
				</div>
			  <% } %>
			  
			</div>
			<div class="row p-3">
				<a class="btn btn-success">Checkout</a> 
			  </div>
		  </div>
		

		<!-- ------------------------  Footer ------------------------  -->
		<div class="footer">
			<div class="container-footer">
				<div class="row-footer">
					<div class="footer-col-3">
						<h3>Vita Health Center</h3>
						<ul>
							<li class="li-footer"></li>
							<li>FAQ</li>
							<li>Blogs Post</li>
							<li>My Account</li>
							<li>Contact us</li>
							<li>Terms of Use — Privacy Policy</li>
						</ul>
					</div>
					<div class="footer-col-2">
						<img src="./img/1.png" />
					</div>
					<div class="footer-col-3">
						<h3>Vita Skincare</h3>
						<ul>
							<li class="li-footer"></li>
							<li>Blogs Post</li>
							<li>My Account</li>
							<li>instructions</li>
							<li>Return Policy</li>
							<li>Terms of Use — Privacy Policy</li>
						</ul>
					</div>
					<div class="footer-col-4">
						<h3>Follow us</h3>
						<ul>
							<li>Facebook</li>
							<li>Instagram</li>
							<li>Pinterest</li>
						</ul>
					</div>
				</div>
				<hr />
				<p class="copyright">Copyright 2021 - Vita Inc</p>
			</div>
		</div>
