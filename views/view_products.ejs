<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include('partials/head.ejs'); %>
		<!-- FIXME: -->
		<!-- QUITAR LA REFERENCIA A ESTE ARCHIVO YA QUE NO APLICA NADA -->
		<!-- <link rel="stylesheet" href="assets/css/styles_shop.css" /> -->
		<link rel="stylesheet" href="/assets/css/styles_view_product.css" />
	</head>

	<body>
		<div id="preloader"></div>

		<!--  ------------------ PROMO ------------------ -->
		<div class="promo">
			<span>
				<a href="#">
					<i class="fas fa-envelope"></i> contactvitahealthc@gmail.com
				</a></span
			>
			<span>ENJOY 15% OFF WHEN YOU SPEND $40 OR MORE FOR NEW SUBSCRIBERS ONLY WHEN SUBSCRIBERS WITH EMAIL</span>
			<span>
				<ul class="media_social">
					<li>
						<a href="#"><i class="fab fa-facebook-square"></i></a>
						<a href="#"><i class="fab fa-instagram"></i></a>
					</li>
				</ul>
			</span>
		</div>

		<!-- ------------------ HEADER ------------------------ -->
		<div class="header">
			<%if (user === undefined) { %> <%- include('partials/header.ejs', {
			account: "LOGIN"}); %> <% } else { %> <%-
			include('partials/header.ejs', { account: user.name, car}); %> <% } %>
		</div>
  <div class="container py-4 mt-5">
    <div class="row py-5">
        <% for (const product of products) { %>
            <div class="col-md-4">
                <a href="/shop/<%=product.id%>/">
              <div class="card  p-2">
                <img class="card-img-top" src="<%= product.image?.image ?? 'https://placehold.co/400x300' %>" alt="Card image cap">
                <div class="card-body">
                  <h5 class="card-title"><%= product.name %></h5>
                  <p class="card-text"><%= product.description %></p>
                  <p class="card-text"><%= product.price %></p>
                  <a href="#" class="btn btn-primary">Buy Now</a>
                </div>
              </div>
              </a>
            </div>
          <% } %>
    </div>
  </div>
  
  <!-- footer -->
  <%- include('partials/skincare-footer.ejs'); %>

  <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
  <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <%- include('partials/script.ejs'); %>
  <script src="/assets/js/index.js"></script>
</body>
</html>
