<!DOCTYPE html>
<html lang="en">
	<head>
		<!-- Required meta tags -->
		<meta charset="utf-8" />
		<meta
			name="viewport"
			content="width=device-width, initial-scale=1, shrink-to-fit=no"
		/>

		
		<%- include('partials/head.ejs'); %>
		<title>Login</title>

		<link rel="stylesheet" href="assets/css/styles_login.css" />
	</head>

	<body>
		<section class="form my-5 mx-2">
			<div class="container">
				<div class="row no-gutters">
					<div class="col-lg-5 img">
						<img
							src="./img/imagen_modelo1.webp"
							class="img-fluid"
							alt=""
						/>
					</div>

					<div class="col-lg-7 pl-4 justify-content-center">
						<img src="./img/logo vitaskincare arena.png" class="logo" />
						<h5>Sign into your account</h5>
						<form action="/login" method="post">
							<div class="form-row">
								<div class="col-lg-7 col-8">
									<input
										type="email"
										name="email"
										placeholder="johndoe@gmail.com"
										class="form-control my-1 py-2"
									/>
								</div>
							</div>

							<div class="form-row">
								<div class="col-lg-7 col-8">
									<input
										type="password"
										name="password"
										placeholder="*******************"
										class="form-control my-1 p-2"
									/>
								</div>
							</div>

							<div class="form-row">
								<div class="col-lg-7 col-8">
									<button type="submit" name="login" class="btn1">Login</button>
								</div>
							</div>

							<a href="#">Forgot password</a>
							<p>Dont't have an account? <a href="/signup">Register here</a></p>
						</form>
					</div>
				</div>
			</div>
		</section>

		<%- include('partials/script.ejs'); %>
	</body>
</html>
