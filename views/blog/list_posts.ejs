<% for(var i=0; i < posts.length; i++) { %>
    <div class="single-blog">
      <img
        src="<%= posts[i]?.image ?? "./img/day-skincare-marula-oil-vegan_480x480.jpg" %>"
        class="img-blog"
        alt=""
      />
      <div class="blog-content">
        <h3>
          <%= posts[i].title %><span>Vita Style</span>
        </h3>
        <p>
          By <%= `${posts[i].createdBy.name} ${posts[i].createdBy.lastname}` %> | <a href="#"></a> <%= posts[i].created_at %>
        </p>
        <a href="<%= `${dir}${posts[i].id}` %>" class="btn">Read More</a>
      </div>
    </div>
<% } %>